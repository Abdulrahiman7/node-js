    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
           <% if(order.length==0) { %>
            <h1>Nothing there!</h1>
            <% } else { %>
                <ul>
                    <% order.forEach(orders => { %>
                        <li>
                            <h2># order:<%= orders.id %></h2>
                            <ul>
                                <% orders.products.forEach(product => {  %> 
                                    <li><%= product.title %>  qty:<%= product.OrderItem.quantity %></li>
                                <% }) %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>